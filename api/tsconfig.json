{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "noImplicitAny": false,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [".idea", ".vscode", "node_modules", "dist"],
  "typedocOptions": {
    "mode": "file",
    "excludePrivate": false,
    "excludeProtected": false,
    "excludeExternals": true,
    "excludeNotExported": false,
    "includeDeclarations": true,
    "target": "ES6",
    "gitRevision": "master",
    "listInvalidSymbolLinks": true
  }
}
